{
  "minimum-stability": "stable",
  "require": {
    "php": "^8.3",
    "twig/twig": "^3.19.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "gbphp/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack serve --open --config webpack.dev.js"
  }
}