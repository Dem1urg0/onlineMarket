{#
    Шаблон страницы "Корзина"
    Выводит корзину пользователя
    Компоненты:
        cart-page - компонент корзины
    параметры:
        countries - список стран (глоабльная переменная)
#}
{% extends 'layouts/main.twig' %}
{# Добавление заголовка #}
{% block title %}Cart{% endblock %}
{% block content %}
    {# Подключение вывод корзины #}
    <cart-page ref="cartPage" :countries-server={{ countries | json_encode }}></cart-page>
{% endblock %}
